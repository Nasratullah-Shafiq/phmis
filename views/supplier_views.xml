<odoo>
     <!-- ========================= -->
    <!--        SUPPLIER VIEWS     -->
    <!-- ========================= -->
    <record id="view_supplier_tree" model="ir.ui.view">
        <field name="name">pharmacy.supplier.tree</field>
        <field name="model">pharmacy.supplier</field>
        <field name="arch" type="xml">
            <tree string="Suppliers">
                <field name="name"/>
                <field name="contact"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <record id="view_supplier_form" model="ir.ui.view">
        <field name="name">pharmacy.supplier.form</field>
        <field name="model">pharmacy.supplier</field>
        <field name="arch" type="xml">
            <form string="Supplier">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="contact"/>
                        <field name="address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_supplier_search" model="ir.ui.view">
        <field name="name">pharmacy.supplier.search</field>
        <field name="model">pharmacy.supplier</field>
        <field name="arch" type="xml">
            <search string="Search Suppliers">
                <field name="name"/>
                <field name="contact"/>
                <filter string="Has Contact" name="has_contact" domain="[('contact','!=',False)]"/>
            </search>
        </field>
    </record>

    <record id="view_supplier_graph" model="ir.ui.view">
        <field name="name">pharmacy.supplier.graph</field>
        <field name="model">pharmacy.supplier</field>
        <field name="arch" type="xml">
            <graph string="Suppliers" type="bar">
                <field name="name" type="row"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="action_supplier" model="ir.actions.act_window">
        <field name="name">Suppliers</field>
        <field name="res_model">pharmacy.supplier</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Manage your suppliers here.</p>
        </field>
    </record>


</odoo>