<odoo>

    <!-- ========================= -->
    <!--          SALE VIEWS       -->
    <!-- ========================= -->
    <record id="view_sale_tree" model="ir.ui.view">
        <field name="name">pharmacy.sale.tree</field>
        <field name="model">pharmacy.sale</field>
        <field name="arch" type="xml">
            <tree string="Sales">
                <field name="medicine_id"/>
                <field name="customer_id"/>
                <field name="quantity"/>
                <field name="price"/>
                <field name="total_price"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_sale_form" model="ir.ui.view">
        <field name="name">pharmacy.sale.form</field>
        <field name="model">pharmacy.sale</field>
        <field name="arch" type="xml">
            <form string="Sale">
                <sheet>
                    <group>
                        <field name="medicine_id"/>
                        <field name="customer_id"/>
                        <field name="quantity"/>
                        <field name="price"/>
                        <field name="total_price" readonly="1"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sale_search" model="ir.ui.view">
        <field name="name">pharmacy.sale.search</field>
        <field name="model">pharmacy.sale</field>
        <field name="arch" type="xml">
            <search string="Search Sales">
                <field name="medicine_id"/>
                <field name="customer_id"/>
                <field name="date"/>
                <filter string="Today" name="today" domain="[('date','=',context_today())]"/>
            </search>
        </field>
    </record>

    <record id="view_sale_graph" model="ir.ui.view">
        <field name="name">pharmacy.sale.graph</field>
        <field name="model">pharmacy.sale</field>
        <field name="arch" type="xml">
            <graph string="Sales" type="bar">
                <field name="medicine_id" type="row"/>
                <field name="quantity" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_sale" model="ir.actions.act_window">
        <field name="name">Sales</field>
        <field name="res_model">pharmacy.sale</field>
        <field name="view_mode">tree,form,graph</field>
    </record>

</odoo>